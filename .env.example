# Constellation CMDB Environment Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=constellation123
NEO4J_DATABASE=neo4j

# =============================================================================
# API CONFIGURATION
# =============================================================================
ENVIRONMENT=development
API_V1_STR=/api/v1
PROJECT_NAME=Constellation CMDB
PROJECT_VERSION=0.1.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=constellation-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:4200"]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VUE_APP_API_BASE_URL=http://localhost:8000/api/v1
VUE_APP_NEO4J_BROWSER_URL=http://localhost:7474

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
RELOAD=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=/app/uploads